<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.URLShortner" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_primary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tabbg">
        <item name="android:backgroundTint">@color/light_blue</item>
    </style>

    <style name="selectedTextColor">
        <item name="android:color">@color/dark_primary</item>
    </style>

    <style name="shorten_url_btn">
        <item name="android:backgroundTint">@color/light_blue</item>
    </style>


    <style name="Theme.URLShortner" parent="Base.Theme.URLShortner" />
</resources>